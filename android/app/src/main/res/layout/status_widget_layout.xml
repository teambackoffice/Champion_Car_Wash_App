<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="#F5F5F5">

    <!-- Main Container -->
    <LinearLayout
        android:id="@+id/widget_status_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#1F1F1F">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/widget_status_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="4dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Champion Car Wash"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/widget_total_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:minWidth="32dp"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="#0D47A1" />
    </LinearLayout>

    <!-- Status Counts Grid Row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <!-- Open Services -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginEnd="2dp"
            android:background="#4A2C00">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔔"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/widget_open_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#F57C00"
                android:textSize="18sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open"
                android:textColor="#FFAB40"
                android:textSize="9sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Prebooking -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginStart="2dp"
            android:background="#143D16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📅"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/widget_prebooking_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#388E3C"
                android:textSize="18sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scheduled"
                android:textColor="#69F0AE"
                android:textSize="9sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Status Counts Grid Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <!-- In Progress -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginEnd="2dp"
            android:background="#0A3C5A">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚙️"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/widget_inprogress_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:textSize="18sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textColor="#82B1FF"
                android:textSize="9sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Completed -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginStart="2dp"
            android:background="#3C134F">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/widget_completed_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#7B1FA2"
                android:textSize="18sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                android:textColor="#EA80FC"
                android:textSize="9sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Last Updated -->
    <TextView
        android:id="@+id/widget_last_updated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap to refresh"
        android:textColor="#9E9E9E"
        android:textSize="9sp"
        android:gravity="center"
        android:layout_marginTop="6dp" />

    </LinearLayout>

</LinearLayout>
